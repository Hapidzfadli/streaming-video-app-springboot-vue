# Application
APP_PORT=8080
APP_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=videoplatform
DB_USERNAME=root
DB_PASSWORD=password

# MinIO Configuration
MINIO_ENDPOINT=http://localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=videos

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_ENCODING_QUEUE_TOPIC=video-encoding-queue
KAFKA_ENCODING_STATUS_TOPIC=video-encoding-status

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_should_be_long_and_secure
JWT_EXPIRATION_MS=86400000

# Video Processing
MAX_FILE_SIZE=3221225472  # 3GB in bytes
SUPPORTED_FORMATS=mp4,avi,mov,mkv
RESOLUTIONS=240p,360p,480p,720p,1080p,4K

# ELK Stack
LOGSTASH_HOST=localhost
LOGSTASH_PORT=5000